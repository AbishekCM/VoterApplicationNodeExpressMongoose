<%- include('./partials/nav.ejs',{pageTitle:'Voter Editing'}) %>
    <header>
        <h1>Voter Registration Update Form</h1>
    </header>
    <form action="/voters/voterDetails/<%= voter._id %>" method="POST">
      
    <div>
        <label for="id">Voter Id: <%= voter._id %></label>
        <input type="text" id="id" value="<%= voter._id %>" name="_id"  hidden>
    </div>
    <div class="voter">

        <% if(voter.votingStatus==='Approved' ){ %>
            <label style="color:green">Voting Status: <%= voter.votingStatus %>
            </label>

            <% } else{%>
                <label style="color: red;">Voting Status: <%= voter.votingStatus %>
                </label>
                <%}%>
        
        
        <input type="text" id="votingStatus" value="<%= voter.votingStatus %>" name="votingStatus" hidden >
    </div>

        <div>
            <label for="name">Full Name</label>
            <input type="text" id="name" value="<%= voter.name %>" name="name" required>
        </div>
        <div>
            <label for="municipality">Municipality</label>
            <input type="text" value="<%= voter.municipality %>" id="municipality" name="municipality" required>
        </div>
        <div>
            <label for="age">Age</label>
            <input type="number" id="age" name="age" min="18" value="<%= voter.age %>" required>
        </div>
        <button type="submit">Update</button>
    </form>
</body>
</html>
